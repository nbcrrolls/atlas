	<package>atlas-opal</package>

<post>
if test -d /opt/opal; then

<file name="/opt/opal/deployed/deploy.sh" mode="append">
# atlas 
atlasver=ATLASVER
atlas_bin=/opt/atlas-ATLASVER/bin/atlas.sh
if test -e $atlas_bin; then
    $ANT -f $OPALXML deploy -DserviceName=atlas_${atlasver} -DappConfig=$OPALCONFIG/atlas_${atlasver}.xml
fi

# flex 
flexver=ATLASVER
flexbin=/opt/atlas-ATLASVER/bin/flex_atlas
if test -e $flexbin; then
    $ANT -f $OPALXML deploy -DserviceName=flex_${flexver} -DappConfig=$OPALCONFIG/flex_${flexver}.xml
fi

</file>

fi

</post>

</kickstart>
